extends layout

block content
  div
    h1 Edit blog post
    form(method='post')
      label(for='id') Post title
      input(type='text' name='title' placeholder='Post title' id='title' value=`${title}`)
      label(for='content') Post content
      textarea(name='content' placeholder='Content' id='content')= content
      button(type='submit') Save
      a(href=`/post/${postId}`) Cancel
